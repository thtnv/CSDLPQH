@using System.Security.Claims
@{
    Layout = null;
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : "Khách";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern,  html5, responsive">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Dreams Pos admin template</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/img/admin-panel.png">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/fontawesome/fontawesome-free-6.7.2-web/fontawesome-free-6.7.2-web/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/fontawesome/fontawesome-free-6.7.2-web/fontawesome-free-6.7.2-web/css/all.min.css">
    <link rel="stylesheet" href="~/Content/style.css">

    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="main-wrapper">
        <!-- Header -->
        <div class="header">
            <div class="header-left active">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/img/logo.jpg" alt="">
                </a>
                <a href="@Url.Action("Index", "Home")" class="logo-small">
                    <img src="~/img/logo_1.jpg" alt="">
                </a>
                <a id="toggle_btn" href="javascript:void(0);"></a>
            </div>

            <a id="mobile_btn" class="mobile_btn" href="#sidebar">
                <span class="bar-icon"><span></span><span></span><span></span></span>
            </a>

            <ul class="nav user-menu">
                <li class="nav-item">
                    <div class="top-nav-search">
                        <a href="javascript:void(0);" class="responsive-search"><i class="fa fa-search"></i></a>
                        <form action="#">
                            <div class="searchinputs">
                                <input type="text" placeholder="Search Here ...">
                                <div class="search-addon">
                                    <span><img src="~/img/closes.svg" alt="img"></span>
                                </div>
                            </div>
                            <a class="btn" id="searchdiv"><img src="~/img/search.svg" alt="img"></a>
                        </form>
                    </div>
                </li>

                <li class="nav-item dropdown has-arrow flag-nav">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="javascript:void(0);">
                        <img src="~/img/us1.png" alt="" height="20">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item"><img src="~/img/us.png" height="16" /> English</a>
                        <a class="dropdown-item"><img src="~/img/fr.png" height="16" /> French</a>
                        <a class="dropdown-item"><img src="~/img/es.png" height="16" /> Spanish</a>
                        <a class="dropdown-item"><img src="~/img/de.png" height="16" /> German</a>
                    </div>
                </li>

                <li class="nav-item dropdown has-arrow main-drop">
                    <a href="#" class="dropdown-toggle nav-link userset" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img src="~/img/admin-panel.png" alt="">
                            <span class="status online"></span>
                        </span>
                    </a>
                    <div class="dropdown-menu menu-drop-user">
                        <div class="profilename">
                            <div class="profileset">
                                <span class="user-img">
                                    <img src="~/img/admin-panel.png" alt="">
                                    <span class="status online"></span>
                                </span>
                                <div class="profilesets">
                                    <h6>@username</h6>
                                    <h5>Admin</h5>
                                </div>
                            </div>
                            <hr class="m-0">

                            <a href="@Url.Action("Logout", "Account")" class="dropdown-item logout pb-0" href="#"><img src="~/img/log-out.svg" class="me-2" alt="img">Logout</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="active">
                            <a href="@Url.Action("HomeAdmin", "Admin")" style="background:#10E7DC">
                                <img src="~/img/dashboard.svg" alt="img"><span> Dashboard</span>
                            </a>
                        </li>
                        <li class="submenu">
                            <a href="#"><img src="~/img/product.svg" alt="img"><span>Sản Phẩm</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="@Url.Action("QLSanPham", "Admin")">Danh Sách Sản Phẩm</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#"><img src="~/img/time.svg" alt="img"><span> Thống Kê Doanh Thu</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="@Url.Action("ThongKeSanPham", "Admin")">Theo Sản Phẩm</a></li>
                                <li><a href="@Url.Action("ThongKeDonHang", "Admin")">Theo Đơn Hàng</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#"><img src="~/img/transfer1.svg" alt="img"><span> Giao Dịch</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="@Url.Action("ChiTietGD", "Admin")">Chi Tiết Giao Dịch</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#"><img src="~/img/users1.svg" alt="img"><span> User</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="@Url.Action("QLUsers", "Admin")">Người Dùng</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="page-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/feather.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/apexchart/apexcharts.min.js"></script>
    <script src="~/Scripts/js/apexchart/chart-data.js"></script>
    <script src="~/Scripts/js/script_giohang.js"></script>

    <script>
        function logout() {
            document.cookie = "CookiesLogin=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
            window.location.href = "@Url.Action("Login", "Account")";
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
