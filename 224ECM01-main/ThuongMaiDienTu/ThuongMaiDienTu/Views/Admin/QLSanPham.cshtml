@using Newtonsoft.Json
@model List<ThuongMaiDienTu.Models.SanPham>
@{
    Layout = "~/Views/Admin/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Dreams Pos admin template</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.jpg">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/fontawesome/fontawesome-free-6.7.2-web/fontawesome-free-6.7.2-web/css/all.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Quản Lý Sản Phẩm</h4>
            </div>
            <div class="page-btn">
                <a href="@Url.Action("CESanPham", "Admin", new { chucnang = "Create" })" class="btn btn-added">
                    <img src="~/img/plus.svg" alt="img" class="me-1">Thêm Sản Phẩm
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-path">
                            <a class="btn btn-filter" id="filter_search">
                                <img src="~/img/filter.svg" alt="img">
                                <span><img src="~/img/closes.svg" alt="img"></span>
                            </a>
                        </div>
                        <div class="search-input">
                            <a class="btn btn-searchset"><img src="~/img/search-white.svg" alt="img"></a>
                        </div>
                    </div>
                    <div class="wordset">
                        <ul>
                            <li><a data-bs-toggle="tooltip" title="pdf"><img src="~/img/pdf.svg" alt="img"></a></li>
                            <li><a data-bs-toggle="tooltip" title="excel"><img src="~/img/excel.svg" alt="img"></a></li>
                            <li><a data-bs-toggle="tooltip" title="print"><img src="~/img/printer.svg" alt="img"></a></li>
                        </ul>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table datanew">
                        <thead>
                            <tr>
                                <th>
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Danh Mục</th>
                                <th>Giá Bán</th>
                                <th>Hình Ảnh</th>
                                <th>Size</th>
                                <th>Số Lượng</th>
                                <th>Mô Tả</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sanpham in Model)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>
                                    <td>@sanpham.idSanPham</td>
                                    <td>@sanpham.TenSanPham</td>
                                    <td>@sanpham.DanhMuc.tenDanhMuc</td>
                                    <td>@sanpham.GiaBan.ToString("N0")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(sanpham.HinhAnh))
                                        {
                                            try
                                            {
                                                var images = JsonConvert.DeserializeObject<string[]>(sanpham.HinhAnh);
                                                if (images != null && images.Length > 0)
                                                {
                                                    <img src="@Url.Content("~/img/" + images[0])"
                                                         alt="@sanpham.TenSanPham"
                                                         style="max-width: 50px; max-height: 50px;"
                                                         class="img-thumbnail" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không có ảnh</span>
                                                }
                                            }
                                            catch
                                            {
                                                <span class="text-muted">Lỗi hiển thị ảnh</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có ảnh</span>
                                        }
                                    </td>
                                    <td>@sanpham.Size</td>
                                    <td>@sanpham.SoLuong</td>
                                    <td>@sanpham.MoTa</td>
                                    <td>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <a class="me-3" href="@Url.Action("CESanPham", "Admin", new { idSanPham = sanpham.idSanPham, chucnang = "edit" })">
                                                <img src="~/img/edit.svg" alt="Sửa">
                                            </a>
                                            @using (Html.BeginForm("DeleteSanPham", "Admin", new { id = sanpham.idSanPham }, FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc chắn muốn xoá sản phẩm này?');", @class = "m-0" }))
                                            {
                                                <button type="submit" class="btn btn-secondary btn-lg">
                                                    <img src="~/img/delete.svg" alt="Xoá">
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <script src="~/Scripts/jquery-3.7.0.min.js"></script>
</body>
</html>