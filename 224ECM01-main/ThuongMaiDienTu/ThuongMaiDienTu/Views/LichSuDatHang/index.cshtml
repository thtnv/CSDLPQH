    <main>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <section class="order-summary">
                    <div class="shop-info">
                        <div class="shop-name">
                            <strong><i class="fas fa-store"></i> GL JEWELRY</strong>
                            <span class="chat-btn">Chat</span>
                            <span class="view-shop">View Shop</span>
                        </div>
                        @{
                            bool daDanhGia = order.ChiTietHoaDons.All(ct => ct.DanhGias.Any());
                        }
                        <div class="delivery-status">
                            <span>🚚 Delivered / Not verified</span>
                            <span class="rated">| @(daDanhGia ? "REVIEWED" : "NOT REVIEWED")</span>
                        </div>
                    </div>

                    @{
                        var firstProduct = order.ChiTietHoaDons.FirstOrDefault();
                        var remainingProducts = order.ChiTietHoaDons.Skip(1);
                        var images = !string.IsNullOrEmpty(firstProduct?.SanPham.HinhAnh)
                            ? Newtonsoft.Json.JsonConvert.DeserializeObject<string[]>(firstProduct.SanPham.HinhAnh)
                            : new string[0];
                        var firstImage = images.Length > 0 ? images[0].Trim('"') : "default.jpg";
                    }

                    @if (firstProduct != null)
                    {
                        var danhGiaFirst = firstProduct.DanhGias.FirstOrDefault();
                        <div class="product-block" id="firstProduct-@order.idHoaDon">
                            <a style="display:block" href="@Url.Action("Index", "Details", new {id = firstProduct.SanPham.idSanPham})">
                                <div class="product-info">
                                    <img src="@Url.Content("~/img/" + firstImage)" width="80" />
                                    <div class="details">
                                        <div class="product-namels">@firstProduct.SanPham.TenSanPham</div>
                                        <div class="product-typels">Category: @firstProduct.SanPham.DanhMuc.tenDanhMuc</div>
                                        <div class="product-typels">Quantity: @firstProduct.soLuong</div>
                                    </div>
                                    <div class="price">
                                        <strong>@firstProduct.giaBan.ToString("N0") ₫</strong>
                                    </div>
                                </div>
                            </a>

                            @if (danhGiaFirst == null)
                            {
                                <div style="margin-left: 145px; margin-top: 10px;">
                                    <button class="btn-outline" onclick="toggleReviewForm(@order.idHoaDon, @firstProduct.idChiTietHD)">Review this product</button>
                                </div>
                                <div id="reviewForm-@order.idHoaDon-@firstProduct.idChiTietHD" style="display:none; margin-top: 10px; border-top: 1px solid #ddd; padding: 15px 30px;">
                                    <form onsubmit="submitReview(event, @order.idHoaDon, @firstProduct.idChiTietHD)">
                                        <input type="hidden" name="idChiTietHD" value="@firstProduct.idChiTietHD" />
                                        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
                                            <div style="flex: 1 1 250px;">
                                                <p><i class="fas fa-star"></i> <strong>Rating:</strong></p>
                                                <select name="soSao" required style="padding: 5px; width: 100%;">
                                                    <option value="5">★★★★★</option>
                                                    <option value="4">★★★★☆</option>
                                                    <option value="3">★★★☆☆</option>
                                                    <option value="2">★★☆☆☆</option>
                                                    <option value="1">★☆☆☆☆</option>
                                                </select>
                                            </div>
                                            <div style="flex: 2 1 400px;">
                                                <p><i class="fas fa-comment"></i> <strong>Review:</strong></p>
                                                <textarea name="noiDung" rows="3" style="width: 100%;" required></textarea>
                                            </div>
                                        </div>
                                        <div style="margin-top: 15px;">
                                            <button type="submit" class="btn">Submit Review</button>
                                        </div>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div style="margin-left: 145px; margin-top: 10px;">
                                    ✅ <strong>Reviewed:</strong> @danhGiaFirst.soSao ★ — "@danhGiaFirst.noiDung"
                                </div>
                            }
                        </div>
                    }

                    <div class="order-details-content" id="details-@order.idHoaDon" style="display:none; margin-top: 10px;">
                        @foreach (var item in remainingProducts)
                        {
                            var images_remain = !string.IsNullOrEmpty(item.SanPham.HinhAnh)
                                ? Newtonsoft.Json.JsonConvert.DeserializeObject<string[]>(item.SanPham.HinhAnh)
                                : new string[0];
                            var firstImage_remain = images_remain.Length > 0 ? images_remain[0].Trim('"') : "default.jpg";
                            var danhGia = item.DanhGias.FirstOrDefault();

                            <div class="product-block">
                                <a style="display:block" href="@Url.Action("Index", "Details", new {id = firstProduct.SanPham.idSanPham})">
                                    <div class="product-info">
                                        <img src="@Url.Content("~/img/" + firstImage_remain)" width="70" />
                                        <div class="details">
                                            <div class="product-namels">@item.SanPham.TenSanPham</div>
                                            <div class="product-typels">Category: @item.SanPham.DanhMuc.tenDanhMuc</div>
                                            <div class="product-typels">Quantity: @item.soLuong</div>
                                        </div>
                                        <div class="price">
                                            <strong>@item.giaBan.ToString("N0") ₫</strong><br />
                                            <small style="color:gray">= @string.Format("{0:N0}", item.soLuong * item.giaBan) ₫</small>
                                        </div>
                                    </div>
                                </a>

                                @if (danhGia == null)
                                {
                                    <div style="margin-left: 145px; margin-top: 10px;">
                                        <button class="btn-outline" onclick="toggleReviewForm(@order.idHoaDon, @item.idChiTietHD)">Review this product</button>
                                    </div>
                                    <div id="reviewForm-@order.idHoaDon-@item.idChiTietHD" style="display:none; margin-top:10px; border-top: 1px solid #ddd; padding: 15px 30px;">
                                        <form onsubmit="submitReview(event, @order.idHoaDon, @item.idChiTietHD)">
                                            <input type="hidden" name="idChiTietHD" value="@item.idChiTietHD" />
                                            <div style="display: flex; flex-wrap: wrap; gap: 20px;">
                                                <div style="flex: 1 1 250px;">
                                                    <p><i class="fas fa-star"></i> <strong>Rating:</strong></p>
                                                    <select name="soSao" required style="padding: 5px; width: 60%;">
                                                        <option value="5">★★★★★</option>
                                                        <option value="4">★★★★☆</option>
                                                        <option value="3">★★★☆☆</option>
                                                        <option value="2">★★☆☆☆</option>
                                                        <option value="1">★☆☆☆☆</option>
                                                    </select>
                                                </div>
                                                <div style="flex: 2 1 400px;">
                                                    <p><i class="fas fa-comment"></i> <strong>Review:</strong></p>
                                                    <textarea name="noiDung" rows="3" style="width: 80%;" required></textarea>
                                                </div>
                                            </div>
                                            <div style="margin-top: 15px;">
                                                <button type="submit" class="btn">Submit Review</button>
                                            </div>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <div style="margin-left: 145px; margin-top: 10px;">
                                        ✅ <strong>Reviewed:</strong> @danhGia.soSao ★ — "@danhGia.noiDung"
                                    </div>
                                }
                            </div>
                        }

                        <div class="order-info" style="margin-top:15px; border-top: 1px solid #ddd; padding-top:10px;">
                            <h4 style="font-weight: bold; margin-bottom: 10px;">📦 Recipient Information:</h4>
                            <div style="display: flex; flex-wrap: wrap; gap: 20px; padding-left: 145px;">
                                <div style="flex: 1 1 250px;">
                                    <p><i class="fas fa-user"></i> <strong>Name:</strong> @order.hoTen</p>
                                    <p><i class="fas fa-envelope"></i> <strong>Email:</strong> @order.email</p>
                                </div>
                                <div style="flex: 1 1 250px;">
                                    <p><i class="fas fa-phone"></i> <strong>Phone:</strong> @order.soDienThoai</p>
                                    <p><i class="fas fa-map-marker-alt"></i> <strong>Address:</strong> @order.diaChi</p>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(order.ghiChu))
                            {
                                <div style="margin-top:10px;">
                                    <p><i class="fas fa-sticky-note"></i> <strong>Note:</strong> @order.ghiChu</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="order-footer">
                        <div class="total">
                            <span>Total amount:</span>
                            <strong style="color: red;">@string.Format("{0:N0}", order.tongTien) ₫</strong>
                        </div>
                        <div class="order-actions">
                            <button class="btn" onclick="window.location.href='@Url.Action("MuaLai", "ThanhToan", new { idHoaDon = order.idHoaDon })'">Buy Again</button>
                            <button class="btn-outline" onclick="toggleDetails(@order.idHoaDon)">View Order Details</button>
                            @if (daDanhGia)
                            {
                                <button class="btn-outline" onclick="window.location.href='@Url.Action("XemDanhGia", "Shop", new { id = order.idHoaDon })'">View Shop Reviews</button>
                            }
                            else
                            {
                                @*<button class="btn-outline" onclick="toggleReviewForm(@order.idHoaDon)">Review Now</button>*@
                            }
                        </div>
                    </div>
                </section>
            }
        }
        else
        {
            <p>No order history found.</p>
        }
    </main>

