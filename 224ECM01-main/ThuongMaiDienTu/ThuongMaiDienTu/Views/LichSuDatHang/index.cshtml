    <script src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        function toggleDetails(orderId) {
            const detailDiv = document.getElementById('details-' + orderId);
            const button = event.target;

            if (detailDiv.style.display === 'none') {
                detailDiv.style.display = 'block';
                button.textContent = 'Hide Details';

                // Hide all review forms when viewing details
                const reviewForms = detailDiv.querySelectorAll('[id^="reviewForm-"]');
                reviewForms.forEach(form => {
                    form.style.display = 'none';
                });
            } else {
                detailDiv.style.display = 'none';
                button.textContent = 'View Order Details';
            }
        }

        function toggleReviewForm(orderId, chiTietHDId = null) {
            // If specific product review (click from product's "Review" button)
            if (chiTietHDId) {
                const reviewForm = document.getElementById(`reviewForm-${orderId}-${chiTietHDId}`);
                if (reviewForm) {
                    reviewForm.style.display = reviewForm.style.display === 'none' ? 'block' : 'none';
                }
                return;
            }

            // If click from general "Review Now" button (for entire order)
            const detailDiv = document.getElementById("details-" + orderId);
            const firstProductDiv = document.getElementById("firstProduct-" + orderId);

            // Show order details if hidden
            if (detailDiv.style.display === 'none') {
                detailDiv.style.display = 'block';
                const detailButton = document.querySelector(`.btn-outline[onclick="toggleDetails(${orderId})"]`);
                if (detailButton) {
                    detailButton.textContent = 'Hide Details';
                }
            }

            // Show review forms for unreviewed products
            const allReviewForms = document.querySelectorAll(`[id^="reviewForm-${orderId}"]`);
            allReviewForms.forEach(form => {
                // Check if product has been reviewed
                const isRated = form.parentNode.querySelector('div[style*="margin-left: 145px"]');
                if (!isRated) {
                    form.style.display = 'block';
                } else {
                    form.style.display = 'none';
                }
            });
        }

        function submitReview(event, orderId, chiTietHDId) {
            event.preventDefault();

            const form = event.target;
            const formData = new FormData(form);

            fetch('/LichSuDatHang/GuiDanhGia', {
                url: '/LichSuDatHang/GuiDanhGia',
                method: 'POST',
                body: formData
            })
                .then(async (response) => {
                    const text = await response.text();
                    let data;

                    try {
                        data = JSON.parse(text);
                    } catch (err) {
                        console.error("Response is not JSON. Content:\n", text);
                        alert("Server returned invalid response. Your session may have expired.");
                        return;
                    }

                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                    alert('An error occurred while submitting your review');
                });
        }
    </script>
