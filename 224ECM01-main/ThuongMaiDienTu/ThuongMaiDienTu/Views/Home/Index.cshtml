        </section>




        <section class="content">
            <h2>WELCOME TO GL JEWELR</h2>
            <p>
                "A world of exquisite silver jewelry, where elegance blends seamlessly with sophistication.
                As Audrey Hepburn once said, 'Elegance is the only beauty that never fades.'
                Let GL Jewelry accompany you, shining with unique designs that celebrate your style
                and distinctive charm in every moment."
            </p>
            <p>
                Embrace your individuality in every moment.
            </p>


            <div class="info-container">
                <div class="logo1">
                    <img src="~/img/nhan_1.png" alt="Logo1">
                </div>
                <div class="separator"></div>
                <div class="vertical-separator"></div>
                <div class="founder">
                    <span>Developed byc</span>
                    <p>Nhóm 02</p>
                </div>
            </div>
        </section>
        <div id="popular-section"
             data-bg1="@Url.Content("~/img/nen10.jpg")"
             data-bg2="@Url.Content("~/img/nen8.jpg")">
        </div>
        @{
            var popular = ViewBag.PopularProducts as List<ThuongMaiDienTu.Models.SanPham>;
        }

        <section class="content-popular">
            <div class="container">
                <h2>Popular Jewellery For You</h2>
                <p>There who like to look good</p>
                <div class="images">
                    @for (int i = 0; i < popular.Count; i++)
                    {
                        var sp = popular[i];
                        string firstImage = "default.jpg";
                        try
                        {
                            if (!string.IsNullOrEmpty(sp.HinhAnh))
                            {
                                var images = JsonConvert.DeserializeObject<List<string>>(sp.HinhAnh);
                                if (images != null && images.Any())
                                {
                                    firstImage = images[0].Trim();
                                }
                            }
                        }
                        catch (JsonException)
                        { }

                        <div class="image-wrapper @(i + 1)">
                            <img src="@Url.Content("~/img/" + firstImage)" alt="@sp.TenSanPham" class="image@(i + 1)">
                            <div class="overlay">
                                <a href="@Url.Action("Index", "Details", new { id = sp.idSanPham })" class="view-button">
                                    View details
                                </a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </section>


        <section class="content-danhmuc">
            <div class="danhmuc">
                <h1>Silver jewelry product catalog</h1>
                <div class="grid-container">
                    @for (int i = 0; i < ViewBag.listDanhMuc.Count; i++)
                    {
                        // Sau phần tử đầu tiên (i == 1), chèn nội dung đặc biệt
                        if (i == 1)
                        {
                            <a href="#">
                                <div class="grid-item text item-text">Boost the aesthetics of your interiors</div>
                            </a>
                        }

                        var dm = ViewBag.listDanhMuc[i];
                        <a href="@Url.Action("Index", "DanhMuc", new { id = dm.idDanhMuc })">
                            <div class="grid-item item-@i">
                                <img src="@Url.Content("~/img/" + dm.hinhAnh)" alt="@dm.tenDanhMuc" />
                                <div class="loop"></div>
                            </div>
                        </a>
                    }

                </div>
            </div>
        </section>

        <section id="content-bestseller">
            <h2>BEST SELLER</h2>
            <div class="container swiper">
                <div class="card-wrapper">
                    <ul class="card-list swiper-wrapper">
                        @using Newtonsoft.Json
                        @if (ViewBag.SimilarProducts != null)
                        {
                            foreach (var product in ViewBag.SimilarProducts as List<ThuongMaiDienTu.Models.SanPham>)
                            {
                                // Parse JSON array and get the first image
                                string firstImage = "default.jpg"; // Fallback image
                                try
                                {
                                    if (!string.IsNullOrEmpty(product.HinhAnh))
                                    {
                                        var images = JsonConvert.DeserializeObject<List<string>>(product.HinhAnh);
                                        if (images != null && images.Any())
                                        {
                                            firstImage = images[0].Trim();
                                        }
                                    }
                                }
                                catch (JsonException)
                                {
                                    // Log error if needed; use fallback image
                                }
                                <li class="card-item swiper-slide">
                                    <a href="@Url.Action("Index", "Details", new { id = product.idSanPham })" class="card-link magnetic">
                                        <div class="card-inner">
                                            <img src="@Url.Content("~/img/" + firstImage)" alt="@product.TenSanPham" class="card-image">
                                            <p class="badge">@product.DanhMuc.tenDanhMuc</p>
                                            <h2 class="card-title">@product.TenSanPham</h2>
                                            <h3 class="card-title">@product.GiaBan.ToString("#,##0").Replace(",", ".") đ</h3>
                                            <button class="card-button material-symbols-outlined">
                                                arrow_forward_ios
                                            </button>
                                        </div>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <p>No products available.</p>
                        }
                    </ul>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-slide-button swiper-button-next"></div>
                    <div class="swiper-slide-button swiper-button-prev"></div>
                </div>
            </div>
        </section>


        <section id="content-subscribe">
            <div id="subscribe-form">
                <h2>Subscribe</h2>
                <form>
                    <label for="email"></label>
                    <input type="email" id="email" placeholder="Type your email....">
                    <button type="submit" style="display: block;">Submit</button>
                </form>
            </div>
            <figrue id="img-subscribe">
                <img src="~/img/nen7.jpg" alt="subscribe-img" class="image3">
            </figrue>
            <div id="snow-container"></div>
        </section>

    </main>

